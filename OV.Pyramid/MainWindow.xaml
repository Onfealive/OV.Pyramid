<Window x:Class="OV.Pyramid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OV.Pyramid"
        mc:Ignorable="d"
        Title="OV.Pyramid.Creation" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Canvas Name="mainCanvas"  Width="1070" Height="676" >
        <Viewbox Canvas.Left="26" Canvas.Top="26" Width="377" Height="550">
            <Canvas Width="813" Height="1185" Name="entireCard">

                <Image Name="frameCard" Width="813" Height="1185"></Image>
                <Border Name="borderName"
                    Background="Transparent" Canvas.Top="40" Canvas.Left="61">

                    <Viewbox Name="viewboxName" Stretch="Fill"
                         Height="95" Width="603">
                        <TextBlock Name="nameCard" FontSize="{Binding Height, ElementName=viewboxName}" ></TextBlock>
                    </Viewbox>
                </Border>
                <Image Name="attributeCard" Width="79" Height="79" Canvas.Left="678" Canvas.Top="53" />
                <Viewbox Width="80" Height="35" Stretch="Fill" Canvas.Left="677.5" Canvas.Top="54.5" >
                    <TextBlock Width="100" Height="35" Name="attributeText" TextAlignment="Center" Foreground="White" FontSize="17" FontWeight="Bold"></TextBlock>
                </Viewbox>
                <Border Name="borderMiddle" Width="621" Height="56" Canvas.Left="97" Canvas.Top="143">
                    <Canvas Name="middleCard"></Canvas>
                </Border>
                <Viewbox Name="viewboxAbility" Canvas.Left="63" Canvas.Top="890">
                    <Grid VerticalAlignment="Center" Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="17"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="17"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Name="BracketLeft" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" ></TextBlock>
                        <TextBlock Grid.Column="1" Name="Ability" Grid.Row="1"></TextBlock>
                        <TextBlock Name="BracketRight" Grid.Column="2" HorizontalAlignment="Right" Grid.Row="0" Grid.RowSpan="2"></TextBlock>
                    </Grid>
                </Viewbox>
                <Border Name="borderText" Canvas.Left="58">
                    <RichTextBox Name="Description" BorderThickness="0" IsReadOnly="True" Background="Transparent"></RichTextBox>
                </Border>
                <Image Name="artworkCard" Stretch="Fill"></Image>
                <Image Name="foilArtwork" Stretch="Fill"
                       Height="{Binding Height, ElementName=artworkCard}" Width="{Binding Width, ElementName=artworkCard}"
                       Canvas.Top="{Binding (Canvas.Top), ElementName=artworkCard}" Canvas.Left="{Binding (Canvas.Left), ElementName=artworkCard}"></Image>
                <Image Name="pendulumBoxMiddle" Width="813" Height="1185"></Image>
                <Image Name="pendulumBoxText" Width="813" Height="1185"></Image>
                <Image Name="borderLore" Width="813" Height="1185"></Image>
                <Image Name="borderArtwork" Width="813" Height="1185"></Image>
                <Image Name="borderCard" Width="813" Height="1185"></Image>
                <Viewbox Canvas.Left="37" Canvas.Top="1128" Height="30.66">
                    <TextBlock Name="codeCard" FontSize="24"></TextBlock>
                </Viewbox>
                <TextBlock Name="ATK" FontWeight="ExtraBold" ></TextBlock>
                <TextBlock Name="DEF" FontWeight="ExtraBold" ></TextBlock>
                <TextBlock Name="editionCard" Canvas.Left="155" Canvas.Top="1127" ></TextBlock>
                <TextBlock Name="setCard" FontSize="23" Canvas.Left="581" Canvas.Top="849" TextAlignment="Right"></TextBlock>
                <TextBlock Name="creatorCard" Canvas.Right="70" HorizontalAlignment="Right" Canvas.Top="1128" ></TextBlock>
                <Image Name="stickerCard" Width="40" Height="40" Stretch="Fill" Canvas.Left="750" Canvas.Top="1120"/>
                <Image Name="foilCard" Width="813" Height="1185"></Image>
            </Canvas>
        </Viewbox>
    </Canvas>
</Window>
